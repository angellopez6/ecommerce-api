{
  "name": "vstore",
  "version": "0.0.1",
  "description": "API for online ecommerce build in Node.js and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "production:run": "npm run build && node build/app.js"
  },
  "keywords": [
    "TypeScript",
    "Node.js",
    "virtual",
    "store",
    "sequelize",
    "docker"
  ],
  "author": "@angellopez6",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev:start",
    "ext": ".ts,.js"
  }
}
